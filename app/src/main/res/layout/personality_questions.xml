<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353552">

    <TextView
        android:id="@+id/textView_cuisine"
        android:layout_width="213dp"
        android:layout_height="50dp"
        android:layout_marginTop="304dp"
        android:fontFamily="@font/JosefinSans_Thin"
        android:text="Which cuisine do you prefer?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerCuisine"
        android:layout_width="213dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/JosefinSans_Light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_cuisine" />

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="282dp"
        android:layout_height="68dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/JosefinSans_Thin"
        android:text="Let us help you find a friend."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_atmosphere"
        android:layout_width="284dp"
        android:layout_height="77dp"
        android:layout_marginTop="424dp"
        android:fontFamily="@font/JosefinSans_Thin"
        android:text="What type of atmosphere would you prefer to be in?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPeaceful"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginStart="96dp"
        android:background="@drawable/edit_text_border"
        android:fontFamily="@font/JosefinSans_Light"
        android:text="peaceful"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_atmosphere" />

    <Button
        android:id="@+id/buttonFun"
        android:layout_width="96dp"
        android:layout_height="48dp"
        android:layout_marginEnd="96dp"
        android:background="@drawable/edit_text_border"
        android:fontFamily="@font/JosefinSans_Light"
        android:text="fun"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_atmosphere" />

    <TextView
        android:id="@+id/textView_dinnerTime"
        android:layout_width="297dp"
        android:layout_height="78dp"
        android:layout_marginTop="136dp"
        android:fontFamily="@font/JosefinSans_Thin"
        android:text="Around what time do you prefer to have dinner? (e.g. 1200, 1800)"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_dinnerTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_dinnerTime" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="193dp"
        android:layout_height="0dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="572dp"
        android:background="@drawable/edit_text_border"
        android:fontFamily="@font/JosefinSans_Light"
        android:text="submit"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>