<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#353552"
    android:padding="20dp">

  <ImageView
      android:id="@+id/CIPfp"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@tools:sample/avatars" />

  <TextView
      android:id="@+id/CIUsername"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:fontFamily="@font/josefinsanslight"
      android:textColor="@android:color/white"
      android:textSize="22sp"
      app:layout_constraintBottom_toTopOf="@+id/CIlastmessage"
      app:layout_constraintStart_toEndOf="@+id/CIPfp"
      app:layout_constraintTop_toTopOf="@+id/CIPfp"
      app:layout_constraintVertical_bias="1.0"
      tools:text="@tools:sample/full_names" />

  <TextView
      android:id="@+id/CIlastmessage"
      android:layout_width="285dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="30dp"
      android:layout_marginEnd="8dp"
      android:fontFamily="@font/josefinsanslight"
      android:textColor="#FFFFFF"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/CIPfp"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="@tools:sample/lorem[4:10]" />

  <TextView
      android:id="@+id/CILastTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:fontFamily="@font/josefinsanslight"
      android:textColor="#FFFFFF"
      android:textSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/CIPfp"
      tools:text="@tools:sample/date/hhmm" />
</androidx.constraintlayout.widget.ConstraintLayout>